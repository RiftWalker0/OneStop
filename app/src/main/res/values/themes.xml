
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.OneStop" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="21">@android:color/transparent</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@android:color/black</item>
    </style>
    <style name="Theme.OneStop.Black" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:windowBackground">@color/black</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
    </style>
    <style name="Theme.OneStop.White" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
    </style>
</resources>
