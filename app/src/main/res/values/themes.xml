<resources>
    <style name="Theme.OneStop.Base" parent="Theme.Material3.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>
    <style name="Theme.OneStop.Black" parent="Theme.OneStop.Base">
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>
        <item name="android:windowBackground">@color/surface_dark</item>
    </style>
    <style name="Theme.OneStop.White" parent="Theme.OneStop.Base">
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/on_surface_light</item>
        <item name="android:windowBackground">@color/surface_light</item>
    </style>
</resources>
