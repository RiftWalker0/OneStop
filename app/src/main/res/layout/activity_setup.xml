<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/include_toolbar"/>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/tv_pc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PC:\n1) adb shell pm grant com.onestop android.permission.WRITE_SECURE_SETTINGS\n2) Disable Permission Monitoring in Developer options."
                    android:padding="8dp"/>
                <TextView
                    android:id="@+id/tv_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mobile (AShell):\n1) Install AShell.\n2) Run: pm grant com.onestop android.permission.WRITE_SECURE_SETTINGS\n3) Disable Permission Monitoring in Developer options."
                    android:padding="8dp"
                    android:visibility="gone"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <include layout="@layout/include_drawer"/>
</androidx.drawerlayout.widget.DrawerLayout>
