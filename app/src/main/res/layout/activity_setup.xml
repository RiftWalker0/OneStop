<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground"
    android:gravity="center_horizontal">

    <include layout="@layout/include_toolbar"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Setup"
        android:gravity="center"
        android:padding="16dp"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"/>

    <TextView
    android:id="@+id/label_pc"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="PC"
    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
    android:paddingTop="8dp"/>
<TextView
    android:id="@+id/tv_pc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:text="ADB (PC):\n1) adb shell pm grant com.onestop android.permission.WRITE_SECURE_SETTINGS\n2) adb shell settings put global development_settings_enabled 1\n3) adb shell settings put global adb_enabled 1\n\nDisable permission monitoring: Developer options → Disable permission monitoring"/>
<View android:layout_width="match_parent" android:layout_height="16dp"/>
<TextView
    android:id="@+id/label_mobile"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Mobile"
    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"/>
<TextView
    android:id="@+id/tv_mobile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:text="aShell (Mobile):\n1) Run: pm grant com.onestop android.permission.WRITE_SECURE_SETTINGS\n2) settings put global development_settings_enabled 1\n3) settings put global adb_enabled 1\n\nDisable permission monitoring: Developer options → Disable permission monitoring"/>


</LinearLayout>
